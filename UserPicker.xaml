<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select AD User"
        Height="420"
        Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1F1F23">

  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Text="Select the correct account"
               Foreground="#EAEAEA"
               FontSize="16"
               Margin="0,0,0,8"/>

    <TextBlock Grid.Row="1"
               x:Name="LblQuery"
               Text="Query:"
               Foreground="#BDBDBD"
               Margin="0,0,0,10"
               TextWrapping="Wrap"/>

    <Border Grid.Row="2" Background="#2B2B31" CornerRadius="10" Padding="10">
      <ListBox x:Name="LstUsers"
               Background="Transparent"
               BorderThickness="0"
               Foreground="#EAEAEA"
               FontSize="13">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel Margin="0,6,0,6">
              <TextBlock Text="{Binding DisplayLine}" FontSize="13" Foreground="#EAEAEA"/>
              <TextBlock Text="{Binding DistinguishedName}" FontSize="11" Foreground="#BDBDBD" TextWrapping="Wrap"/>
            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Border>

    <DockPanel Grid.Row="3" Margin="0,12,0,0" LastChildFill="False">
      <TextBlock x:Name="LblPickStatus"
                 Foreground="#BDBDBD"
                 VerticalAlignment="Center"
                 DockPanel.Dock="Left"/>

      <Button x:Name="BtnCancel"
              Content="Cancel"
              Width="110"
              Height="32"
              Margin="10,0,0,0"
              Background="#2B2B31"
              Foreground="#EAEAEA"
              BorderThickness="0"
              DockPanel.Dock="Right"/>

      <Button x:Name="BtnSelect"
              Content="Select"
              Width="110"
              Height="32"
              Margin="10,0,0,0"
              Background="#10B981"
              Foreground="White"
              BorderThickness="0"
              DockPanel.Dock="Right"/>
    </DockPanel>
  </Grid>
</Window>
