<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Offline Passphrase Generator"
        Height="280"
        Width="620"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1F1F23">

    <!-- ========================= -->
    <!-- Resources -->
    <!-- ========================= -->
    <Window.Resources>
        <Style x:Key="ModernSlider" TargetType="{x:Type Slider}">
            <Setter Property="Height" Value="28"/>
            <Setter Property="TickFrequency" Value="1"/>
            <Setter Property="IsSnapToTickEnabled" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid>
                            <Track x:Name="PART_Track"
                     Height="28"
                     VerticalAlignment="Center"
                     Margin="0,0,9,0"
                     Minimum="{TemplateBinding Minimum}"
                     Maximum="{TemplateBinding Maximum}"
                     Value="{TemplateBinding Value}">

                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                IsTabStop="False"
                                Focusable="False"
                                Background="Transparent"
                                BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                <Border Height="6"
                                CornerRadius="3"
                                Background="#3A3A42"
                                HorizontalAlignment="Stretch"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>

                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                IsTabStop="False"
                                Focusable="False"
                                Background="Transparent"
                                BorderThickness="0">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                <Border Height="6"
                                CornerRadius="3"
                                Background="#2B2B31"
                                HorizontalAlignment="Stretch"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>

                                <Track.Thumb>
                                    <Thumb Width="18" Height="18">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Grid>
                                                    <Ellipse Width="18" Height="18" Fill="#000000" Opacity="0.25"/>
                                                    <Ellipse Width="16" Height="16" Fill="#EAEAEA"/>
                                                    <Ellipse Width="14" Height="14" Fill="#3B82F6"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ========================= -->
    <!-- Layout -->
    <!-- ========================= -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
               Text="Passphrase"
               Foreground="#EAEAEA"
               FontSize="16"
               Margin="0,0,0,8"/>

        <!-- Output -->
        <Border Grid.Row="1"
            Background="#2B2B31"
            CornerRadius="10"
            Padding="12"
            Margin="0,0,0,12">
            <DockPanel>
                <TextBox Name="TxtPassphrase"
                 FontSize="16"
                 Foreground="#EAEAEA"
                 Background="Transparent"
                 BorderThickness="0"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalContentAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Controls row -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Word slider -->
            <StackPanel Grid.Column="0">
                <DockPanel Margin="0,0,0,4">
                    <TextBlock Text="Words"
                     Foreground="#BDBDBD"/>
                    <TextBlock Margin="8,0,0,0"
                     Foreground="#EAEAEA"
                     Text="{Binding ElementName=SldWords, Path=Value, StringFormat={}{0:0}}"/>
                </DockPanel>

                <Slider Name="SldWords"
                Style="{StaticResource ModernSlider}"
                Minimum="3"
                Maximum="9"
                Value="3"
                IsMoveToPointEnabled="True"
                Width="196"/>
            </StackPanel>

            <!-- Separator -->
            <StackPanel Grid.Column="1" Margin="10,0">
                <TextBlock Text="Separator"
                   Foreground="#BDBDBD"
                   Margin="0,0,0,4"/>
                <ComboBox Name="CmbSep" Height="28" Width="100" HorizontalAlignment="Left">
                    <ComboBoxItem Content="None" IsSelected="True"/>
                    <ComboBoxItem Content="Hyphen (-)" />
                    <ComboBoxItem Content="Underscore (_)"/>
                    <ComboBoxItem Content="Dot (.)"/>
                    <ComboBoxItem Content="Exclamation (!)"/>
                    <ComboBoxItem Content="At (@)"/>
                    <ComboBoxItem Content="Hash (#)"/>
                    <ComboBoxItem Content="Dollar ($)"/>
                    <ComboBoxItem Content="Percent (%)"/>
                    <ComboBoxItem Content="Ampersand (&amp;)"/>
                </ComboBox>
            </StackPanel>

            <!-- Strength -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Strength"
                   Foreground="#BDBDBD"
                   Margin="0,0,0,4"/>
                <TextBlock Name="LblEntropy"
                   Foreground="#34D399"
                   FontSize="14"/>
                <TextBlock Name="LblCharCount"
                   Foreground="#BDBDBD"
                   FontSize="12"
                   Margin="0,2,0,0"
                   Text="0 chars"/>
            </StackPanel>
        </Grid>

        <!-- Options -->
        <Grid Grid.Row="3" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Capitalization"
                   Foreground="#BDBDBD"
                   Margin="0,0,0,4"/>
                <ComboBox Name="CmbCaps" Height="28" Width="100" HorizontalAlignment="Left">
                    <ComboBoxItem Content="First word" IsSelected="True"/>
                    <ComboBoxItem Content="Each word"/>
                    <ComboBoxItem Content="None" />
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Include numbers"
                   Foreground="#BDBDBD"
                   Margin="0,0,0,4"/>
                <CheckBox Name="ChkNums"
                  Margin="0,5,0,0"
                  Content="Append 1 digit per word"
                  Foreground="#EAEAEA"/>
            </StackPanel>

            <DockPanel Grid.Column="2" VerticalAlignment="Bottom">
                <Button Name="BtnGenerate"
                Content="Generate"
                Height="34"
                Width="90"
                Background="#10B981"
                Foreground="White"
                BorderThickness="0"/>
                <Button x:Name="BtnCopy"
                    Content="Copy"
                    DockPanel.Dock="Right"
                    Background="#3B82F6"
                    Foreground="White"
                    BorderThickness="0" Width="90"/>
            </DockPanel>
        </Grid>
        <TextBlock x:Name="LblStatus"
            Foreground="#BDBDBD"
            Margin="468,43,10,0"
            VerticalAlignment="Top" Grid.Row="2"/>
        <!-- Footer -->
    </Grid>
</Window>